<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="fia.ues.sv.bolsatrabajo.ReferenciaActivity"
    android:background="#ffffffff"
    android:clickable="true">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Tabla Referencia"
        android:id="@+id/TVtablaReferencia"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:textColor="#ff352e2c"
        android:theme="@android:style/Animation"
        android:textSize="32dp" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/insertarImgBoton"
        android:layout_below="@+id/TVtablaReferencia"
        android:layout_alignLeft="@+id/TVtablaReferencia"
        android:layout_alignStart="@+id/TVtablaReferencia"
        android:onClick="insertarReferencia"
        android:src="@drawable/botoninsertar" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/eliminarImgBoton"
        android:layout_above="@+id/modificarImgBoton"
        android:layout_alignLeft="@+id/insertarImgBoton"
        android:layout_alignStart="@+id/insertarImgBoton"
        android:onClick="eliminarReferencia"
        android:src="@drawable/botoneliminar" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/modificarImgBoton"
        android:onClick="modificarReferencia"
        android:layout_above="@+id/consultarImgBoton"
        android:layout_alignLeft="@+id/eliminarImgBoton"
        android:layout_alignStart="@+id/eliminarImgBoton"
        android:src="@drawable/botonmodificar" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/consultarImgBoton"
        android:onClick="consultarReferencia"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/modificarImgBoton"
        android:layout_alignStart="@+id/modificarImgBoton"
        android:src="@drawable/botonconsultar" />

</RelativeLayout>
