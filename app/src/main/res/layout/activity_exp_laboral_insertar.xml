<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="fia.ues.sv.bolsatrabajo.ExpLaboralInsertarActivity">

    <TextView android:text="@string/idEmpleadoExpLab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/idEmpleadoEL" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/idEmpresaExpLab"
        android:id="@+id/idEmpresaEL"
        android:layout_below="@+id/spinnerIdEmpleado"
        android:layout_alignRight="@+id/idEmpleadoEL"
        android:layout_alignEnd="@+id/idEmpleadoEL" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/idCargoExpLab"
        android:id="@+id/idCargoEL"
        android:layout_above="@+id/spinnerIdCargo"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/spinnerIdEmpleado"
        android:layout_below="@+id/idEmpleadoEL"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/spinnerIdEmpresa"
        android:layout_below="@+id/idEmpresaEL"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/idCargoEL"
        android:layout_alignEnd="@+id/idCargoEL" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/spinnerIdCargo"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/insertarEL"
        android:id="@+id/buttonInsertarEL"
        android:layout_below="@+id/spinnerIdCargo"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="41dp" />

</RelativeLayout>
